@model LastTriel.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<h1>Delete Course</h1>

<h3>Are you sure you want to delete this course?</h3>
<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="DeleteCourseConfirmed" method="post">
        <input type="hidden" name="courseId" value="@Model.Cid" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="GetCourses" asp-route-id="@Model.Cid" class="btn btn-secondary">Cancel</a>
    </form>
</div>
