@model IEnumerable<LastTriel.Models.Instructor>

@{
    ViewData["Title"] = "Instructors";
}
<link rel="stylesheet" href="~/css/StyleSheet.css">
<script src="~/js/script.js"></script>

<div class="page-header">
    <h1>Instructors</h1>
</div>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.InstructorId)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.LatestQualification)</th>
            <th>@Html.DisplayNameFor(model => model.ExpertiseArea)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr cid="@item.InstructorId">
                <td>@Html.DisplayFor(modelItem => item.InstructorId)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.LatestQualification)</td>
                <td>@Html.DisplayFor(modelItem => item.ExpertiseArea)</td>
                <td>
                    <a asp-action="GetCourses" asp-route-id="@item.InstructorId" class="btn btn-primary" cid="@item.InstructorId">View Courses</a>
                </td>
            </tr>
        }
    </tbody>
</table>
