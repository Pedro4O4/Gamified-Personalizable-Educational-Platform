@model IEnumerable<LastTriel.Models.TakenAssessment>

@{
    ViewData["Title"] = "Learner Assessments";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Assessment Id</th>
            <th>Assessment Title</th>
            <th>Description</th>
            <th>Type</th>
            <th>Total Marks</th>
            <th>Passing Marks</th>
            <th>Scored Points</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Assessment.AssessmentId</td>
                <td>@item.Assessment.Title</td>
                <td>@item.Assessment.Description</td>
                <td>@item.Assessment.Type</td>
                <td>@item.Assessment.TotalMarks</td>
                <td>@item.Assessment.PassingMarks</td>
                <td>@item.ScoredPoints</td>
                <td>
                    <a asp-action="GetAssessmentBreakdown" asp-route-learnerId="@item.Sid" asp-route-assessmentId="@item.AssessmentId" class="btn btn-secondary">Breakdown</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to Learners</a>
</div>
