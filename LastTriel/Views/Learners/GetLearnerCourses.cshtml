@model IEnumerable<LastTriel.Models.Course>

<h2>Courses</h2>

<table class="table">
    <thead>
        <tr>
            <th>Course ID</th>
            <th>Title</th>
            <th>Learning Objective</th>
            <th>Credit Points</th>
            <th>Difficulty Level</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Cid</td>
                <td>@course.Title</td>
                <td>@course.LearningObjective</td>
                <td>@course.CreditPoints</td>
                <td>@course.DifficultyLevel</td>
                <td>@course.Description</td>
                <td>
                    <a asp-action="GetCourseAssessments" asp-route-cid="@course.Cid" class="btn btn-primary">View Assessments</a>
                    <a asp-action="GetModules" asp-route-id="@course.Cid" class="btn btn-primary">View Modules</a> |
                </td>
            </tr>
        }

    </tbody>
</table>
<a asp-action="Index" class="btn btn-primary">Back to Learners</a>
